---
import MainLayout from "../layouts/MainLayout.astro"
import Layout2 from "../layouts/Layout2.astro"
import Rows from "../components/Rows.astro"

const images = [
    "image1.jpg",
    "image2.jpg",
    "image3.jpg",
    "image4.jpg",
    "image5.jpg",
    "image6.jpg",
    "image1.jpg",
    "image2.jpg",
    "image3.jpg",
];
import Title from "../components/Title.astro";
import { splitImages } from "../utils/functions.js";
---

<MainLayout>
    <Layout2>
        <div class="flex flex-col gap-2 w-screen py-20 px-40">
            <Title title="Shop" />
            {splitImages(images).map((arr, index) => (
                <Rows images={arr} key={index} />
            ))
            } 
        </div>

    </Layout2>
</MainLayout>