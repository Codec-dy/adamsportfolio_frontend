---
interface Props {
  text: string;
  align?: 'left' | 'center' | 'right';
}

const { text, align = 'center' } = Astro.props;
---

<style>
  .title-wrapper {
    display: flex;
    flex-direction: column;
    align-items: center;
    margin: 2rem 0;
  }

  .title-text {
    font-size: 2rem;
    font-weight: 700;
    position: relative;
    padding: 0.5rem 1rem;
    text-align: center;
    color: #1a1a1a;
    background: white;
    z-index: 1;
  }

  .title-border {
    width: 100%;
    max-width: 500px;
    height: 2px;
    background: linear-gradient(to right, #6366f1, #ec4899);
    position: relative;
    margin-top: -1px;
  }

  .title-container {
    position: relative;
    text-align: var(--align);
    width: 100%;
  }

  :root {
    --align: center;
  }

  .align-left {
    --align: left;
    align-items: flex-start;
  }

  .align-right {
    --align: right;
    align-items: flex-end;
  }

  .align-center {
    --align: center;
    align-items: center;
  }
</style>

<div class="title-wrapper align-{align}">
  <div class="title-container">
    <div class="title-text">{text}</div>
    <div class="title-border"></div>
  </div>
</div>
