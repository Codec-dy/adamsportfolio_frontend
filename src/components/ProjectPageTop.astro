---
const { project } = Astro.props;
import "../styles/global.css"
---
<div class='flex flex-col sm:flex-row items-start justify-between gap-4 border-b p-3'>
    <div class='flex-1 flex flex-col text-left gap-2'>
            <p class='text-gray-800 text-2xl'>{project?project.title:''}</p>
            <p class='text-sm text-gray-600'>Project Type<br/><span class='text-gray-400 text-xs'>{project?project.category:''}</span></p>
            <p class='text-sm text-gray-600'>Technologies Utilized<br/><span class='text-gray-400 text-xs'>{project?project.techUsed:''}</span></p>
            <p class='text-sm text-gray-600'>Date<br/><span class='text-gray-400 text-xs'>April 2023</span></p>
    </div>
    <article class='flex-1 text-left text-gray-500'>
        {project?project.description:''}
    </article>
   </div>