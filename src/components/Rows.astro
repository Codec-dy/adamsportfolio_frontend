---
import AdminDelete from "./admin/AdminDelete";

const {images,isAdmin=false} = Astro.props;
---

<div class="flex flex-row gap-2 w-full">
    {images.map((image: { img: string, _id:string, type:string }, index: number) => (
        <div class={`flex-1 max-h-[500px] relative w-[130px] overflow-hidden group`}>
        <img src={image.img} alt={`Image ${index + 1}`} class="w-full object-cover h-full rounded-lg shadow-md transition-all hover:scale-110 duration-300 hover:brightness-75" />
        {isAdmin&&<div class="absolute bottom-1 right-1 z-5 opacity-0 group-hover:opacity-100 transition-all duration-300"><AdminDelete id={image._id} model={image.type || 'photography'} client:load/></div>}
        </div>
    ))}
    
</div>